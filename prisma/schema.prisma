generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username String   @unique
  email     String   @unique
  password  String
  profilePicture String?
  phoneNumber String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?


  @@map("users")
}

model Admin {
  id        String   @id @default(uuid())
  username String   @unique
  email     String   @unique
  password  String
  blogs     Blog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?


  @@map("admins")
}

model Blog {
  id        String     @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  authorId  String
  author    Admin    @relation(fields: [authorId], references: [id])
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  @@map("blogs")

}

model PropertyDetail {
  id           Int      @id @default(autoincrement())
  image        String
  propertyType PropertyType
  purchase     PurchaseType
  price        Float
  status       String
  description  String
  contactDetail String
  video        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  deletedAt    DateTime?

  @@map("propertyDetails")
}

enum PurchaseType {
  RENT
  SALE
}

enum PropertyType {
  CONDOMINIUM
  REAL_ESTATE
  HOUSE
  APARTMENT
}